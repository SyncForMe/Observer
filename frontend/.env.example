# Frontend Environment Configuration Template
# Copy this file to .env and update with your actual values

#==============================================================================
# BACKEND API CONFIGURATION
#==============================================================================

# Backend API URL - CRITICAL: Must match your backend deployment
# Development: http://localhost:8001
# Production: https://yourdomain.com
REACT_APP_BACKEND_URL=http://localhost:8001

#==============================================================================
# DEVELOPMENT SERVER SETTINGS
#==============================================================================

# WebSocket port for development server
WDS_SOCKET_PORT=443

# Browser auto-open on start
BROWSER=none

# Development server port (optional, defaults to 3000)
PORT=3000

# Host for development server
HOST=0.0.0.0

#==============================================================================
# BUILD CONFIGURATION
#==============================================================================

# Generate source maps (true/false)
GENERATE_SOURCEMAP=false

# Bundle analyzer (for build analysis)
ANALYZE=false

# Skip pre-flight check for Create React App
SKIP_PREFLIGHT_CHECK=true

#==============================================================================
# GOOGLE OAUTH (OPTIONAL)
#==============================================================================

# Google OAuth client ID for frontend authentication
# Must match the client ID configured in backend
# Get from: https://console.developers.google.com/
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

#==============================================================================
# ANALYTICS & TRACKING (OPTIONAL)
#==============================================================================

# Google Analytics tracking ID
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Mixpanel project token
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar tracking ID
REACT_APP_HOTJAR_ID=your_hotjar_id

#==============================================================================
# FEATURE FLAGS
#==============================================================================

# Enable/disable features in frontend
REACT_APP_ENABLE_GOOGLE_LOGIN=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG_MODE=false

# Development features
REACT_APP_SHOW_DEV_TOOLS=false
REACT_APP_ENABLE_MOCK_DATA=false

#==============================================================================
# API CONFIGURATION
#==============================================================================

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=10000

# Retry attempts for failed requests
REACT_APP_API_RETRIES=3

# Request timeout for AI operations
REACT_APP_AI_TIMEOUT=30000

#==============================================================================
# UI/UX SETTINGS
#==============================================================================

# Theme configuration
REACT_APP_DEFAULT_THEME=dark
REACT_APP_ENABLE_THEME_SWITCH=true

# Animation settings
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ANIMATION_DURATION=300

# Accessibility settings
REACT_APP_ENABLE_ACCESSIBILITY=true
REACT_APP_HIGH_CONTRAST_MODE=false

#==============================================================================
# PERFORMANCE SETTINGS
#==============================================================================

# Code splitting and lazy loading
REACT_APP_ENABLE_CODE_SPLITTING=true

# Service worker for PWA
REACT_APP_ENABLE_SERVICE_WORKER=true

# Preload critical resources
REACT_APP_PRELOAD_RESOURCES=true

#==============================================================================
# ERROR HANDLING & LOGGING
#==============================================================================

# Error boundary settings
REACT_APP_ENABLE_ERROR_BOUNDARY=true

# Console logging level (error, warn, info, debug)
REACT_APP_LOG_LEVEL=warn

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

#==============================================================================
# ENVIRONMENT SPECIFIC SETTINGS
#==============================================================================

# Current environment
REACT_APP_ENV=development

# Version information
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-20

# Support information
REACT_APP_SUPPORT_EMAIL=support@yourdomain.com
REACT_APP_SUPPORT_URL=https://yourdomain.com/support

#==============================================================================
# SECURITY SETTINGS
#==============================================================================

# Content Security Policy settings
REACT_APP_CSP_ENABLED=true

# HTTPS enforcement in production
REACT_APP_FORCE_HTTPS=false

# Cross-origin settings
REACT_APP_CORS_ENABLED=true

#==============================================================================
# SOCIAL & SHARING
#==============================================================================

# Social media links
REACT_APP_SOCIAL_TWITTER=https://twitter.com/yourhandle
REACT_APP_SOCIAL_LINKEDIN=https://linkedin.com/company/yourcompany
REACT_APP_SOCIAL_GITHUB=https://github.com/yourusername

# Sharing metadata
REACT_APP_SITE_NAME=AI Agent Simulation Platform
REACT_APP_SITE_DESCRIPTION=Create and manage AI agent simulations
REACT_APP_SITE_IMAGE=https://yourdomain.com/og-image.png

#==============================================================================
# DEVELOPMENT PROXY (if needed)
#==============================================================================

# Proxy for API requests in development
# Uncomment if you need to proxy requests
# PROXY=http://localhost:8001

#==============================================================================
# WEBPACK CONFIGURATION
#==============================================================================

# Webpack bundle analyzer
BUNDLE_ANALYZER=false

# Disable webpack dev server overlay for warnings
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

#==============================================================================
# TESTING CONFIGURATION
#==============================================================================

# Test environment settings
REACT_APP_TEST_MODE=false
REACT_APP_MOCK_API=false

# Test coverage settings
COLLECT_COVERAGE=false
COVERAGE_THRESHOLD=80

#==============================================================================
# PRODUCTION OVERRIDES
#==============================================================================

# Production-specific settings (uncomment for production)
# REACT_APP_ENV=production
# REACT_APP_ENABLE_DEBUG_MODE=false
# REACT_APP_SHOW_DEV_TOOLS=false
# REACT_APP_LOG_LEVEL=error
# REACT_APP_FORCE_HTTPS=true
# GENERATE_SOURCEMAP=false

#==============================================================================
# ADVANCED CONFIGURATION
#==============================================================================

# Memory limits for build process
NODE_OPTIONS=--max-old-space-size=4096

# Build optimization
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=8192

# Public URL for static assets
PUBLIC_URL=/

# Deployment-specific settings
REACT_APP_DEPLOYMENT_URL=https://yourdomain.com
REACT_APP_CDN_URL=https://cdn.yourdomain.com